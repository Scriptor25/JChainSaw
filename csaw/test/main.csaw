num MAX = 4;
num MAX_THREAD = 4;

num[MAX][MAX] matA;
num[MAX][MAX] matB;
num[MAX][MAX] matC;
num step_i = 0;

@multi {
    num i = step_i;
    step_i++;

    for (num j = 0; j < MAX; j++)
        for (num k = 0; k < MAX; k++)
            matC[i][j] += matA[i][k] * matB[k][j];
}

@main: num {

    for (num i = 0; i < MAX; i++) {
        for (num j = 0; j < MAX; j++) {
            matA[i][j] = random() * 10;
            matB[i][j] = random() * 10;
        }
    }

    out("Matrix A:%n");
    for (num i = 0; i < MAX; i++) {
        for (num j = 0; j < MAX; j++)
            out("%s ", matA[i][j]);
        out("%n");
    }

    out("%nMatrix B:%n");
    for (num i = 0; i < MAX; i++) {
        for (num j = 0; j < MAX; j++)
            out("%s ", matB[i][j]);
        out("%n");
    }

    thrd[MAX_THREAD] threads;
    for (num i = 0; i < MAX_THREAD; i++)
        (threads[i] = thrd([](){ multi(); })).start();

    for (num i = 0; i < MAX_THREAD; i++)
        threads[i].join();
    
    out("%nMultiplication of A and B:%n");
    for (num i = 0; i < MAX; i++) {
        for (num j = 0; j < MAX; j++)
            out("%s ", matC[i][j]);
        out("%n");
    }

    ret 0;
}
