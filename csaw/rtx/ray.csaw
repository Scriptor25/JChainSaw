thing: ray {
    orig: point3,
    dir: vec3
}

$ray() { my = ray(point3(0, 0, 0), vec3(0, 0, 0)); }
$ray (origin: point3, direction: vec3) {
    my.orig = origin;
    my.dir = direction;
}

@origin: point3 -> ray { ret my.orig; }
@direction: vec3 -> ray { ret my.dir; }

@at: point3 (t: num) -> ray {
    ret my.orig + t * my.dir;
}
