alias color : vec3;
$color { my = vec3(); }
$color (r: num, g: num, b: num) { my = vec3(r, g, b); }

@write_color (output: file, pixel_color: color) {
    output.out(
        "%.0f %.0f %.0f%n", 
        floor(255.999 * pixel_color.x()),
        floor(255.999 * pixel_color.y()),
        floor(255.999 * pixel_color.z())
    );
}
